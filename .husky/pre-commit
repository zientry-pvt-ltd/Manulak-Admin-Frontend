# Get the current branch name
CURRENT_BRANCH=$(git branch --show-current)

# Block pushing to main
if [ "$CURRENT_BRANCH" = "main" ]; then
  echo " "
  echo "âŒ ERROR: Direct pushes to the 'main' branch are not allowed!"
  echo "âœ‹ Please create a pull request instead."
  echo "ğŸ’¡ Switch to a new branch using: git checkout -b your-branch-name"
  exit 1
fi

echo "âœ… Committed to branch: $CURRENT_BRANCH"

# Run lint checks
echo "ğŸ› ï¸  Running lint checks..."
npm run lint
# Run format checks
echo "ğŸ¨ Running format checks..."
npm run format
# Get the current branch name
CURRENT_BRANCH=$(git branch --show-current)

# Block pushing to main
if [ "$CURRENT_BRANCH" = "main" ]; then
  echo " "
  echo "‚ùå ERROR: Direct pushes to the 'main' branch are not allowed!"
  echo "‚úã Please create a pull request instead."
  echo "üí° Switch to a new branch using: git checkout -b your-branch-name"
  exit 1
fi

echo "‚úÖ Pushing to branch: $CURRENT_BRANCH"